<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".EditorTareas">

<TextView
    android:id="@+id/nombreRut"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:padding="10dp"
    android:text="Tareas"
    android:textAlignment="center"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:textColor="@color/black"
    android:textSize="50sp"
    tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textotiempo_rut"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:text="Hora inicio rutina:"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_below="@id/nombreRut"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/defTimeRutina"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:hint="00:00"
        android:inputType="time"
        android:layout_below="@id/textotiempo_rut"
        android:textColor="@color/grey"
        android:textSize="25dp"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaTareas"
        android:layout_below="@id/defTimeRutina"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/idBtnNuevaTarea"
        android:background="@color/white"
        android:divider="@drawable/list_divider"
        android:scrollbarAlwaysDrawVerticalTrack="true">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/idBtnNuevaTarea"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/plus_circle_outline"
        android:backgroundTint="@color/cardview_light_background"/>


</RelativeLayout>