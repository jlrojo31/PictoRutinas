<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TareaDef">

    <ImageView
        android:id="@+id/fotoTareaDef"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="popupmenu"
        android:src="@drawable/alumno2"
        />
    <ImageView
        android:id="@+id/editFoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:onClick="popupmenu"
        android:src="@drawable/edit_tarea"
        />

    <TextView
        android:id="@+id/textodescricionTareaDef"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:text="Descripción"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_below="@id/fotoTareaDef"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textotiempo_end"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:text="Duracion de tarea:"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_below="@id/EtDescripcionTareaDef"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/EtDescripcionTareaDef"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:hint="Introduzca descripción"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_below="@id/textodescricionTareaDef"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tiempoTareaDef_end"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:hint="00:00"
        android:inputType="time"
        android:layout_below="@id/textotiempo_end"
        android:textColor="@color/grey"
        android:textSize="25dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/idBtActualizarTarea"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_below="@id/tiempoTareaDef_end"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15dp" />


</RelativeLayout>